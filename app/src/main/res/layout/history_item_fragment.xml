<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:layout_width="0dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="12dp"
            android:drawableStart="@drawable/ic_search_24px"
            android:drawablePadding="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchValue" app:layout_constraintEnd_toStartOf="@+id/arrow_up_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            style="?android:buttonBarButtonStyle"
            android:src="@drawable/ic_arrow_upward_24px"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:id="@+id/arrow_up_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>